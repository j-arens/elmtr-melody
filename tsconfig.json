{
    "compilerOptions": {
        "outDir": "/public",
        "sourceMap": true,
        "noImplicitAny": false,
        "module": "commonjs",
        "lib": ["es2017", "dom"],
        "target": "es6",
        "jsx": "react",
        "jsxFactory": "h",
        "allowSyntheticDefaultImports": true,
        "baseUrl": ".",
        "paths": {
            "@melody/*": ["src/melody/*"],
            "@components/*": ["src/melody/components/*"],
            "@redux/*": ["src/melody/redux/*"],
            "@utils/*": ["src/melody/utils/*"],
            "@state-machine/*": ["src/melody/state-machine/*"],
            "@constants": ["src/melody/constants"],
            "@views/*": ["src/melody/views/*"],
            "@adapter/*": ["src/adapter/*"]
        }
    },
    "include": [
        "./src/**/*.ts",
        "./src/**/*.tsx"
    ],
    "exclude": [
        "node_modules",
        "./src/**/__tests__"
    ]
}