{
  "name": "elementor-melody",
  "version": "1.0.0-alpha.1",
  "description": "@TODO",
  "main": "public/js/melody.bundle.js",
  "author": "Josh Arens",
  "jest": {
    "moduleFileExtensions": [
      "js",
      "ts",
      "tsx"
    ],
    "testMatch": [
      "<rootDir>/src/**/__tests__/*.(ts|tsx)"
    ],
    "testPathIgnorePatterns": [
      "/node_modules/"
    ],
    "transform": {
      "\\.(ts|tsx)$": "<rootDir>/dev/tests-preprocessor.js"
    },
    "moduleNameMapper": {
      "mediaframe": "<rootDir>/dev/mocks/mediaframe",
      "@mocks(.*)$": "<rootDir>dev/mocks/$1",
      "@tracks": "<rootDir>/dev/fixtures/tracks",
      "@fixtures(.*)$": "<rootDir>/dev/fixtures/$1",
      "@utils": "<rootDir>/src/melody/utils",
      "@state-machine": "<rootDir>/src/melody/state-machine",
      "@constants": "<rootDir>/src/melody/constants",
      "@components(.*)$": "<rootDir>/src/melody/components/$1",
      "@views(.*)$": "<rootDir>/src/melody/views/$1",
      "@redux(.*)$": "<rootDir>/src/melody/redux$1",
      "\\.(scss)$": "identity-obj-proxy"
    },
    "snapshotSerializers": [
      "jest-serializer-html-string"
    ]
  },
  "devDependencies": {
    "@types/backbone": "^1.3.42",
    "@types/jest": "^22.0.1",
    "@types/jquery": "^3.3.0",
    "@types/node": "^9.4.6",
    "@types/webpack-env": "^1.13.3",
    "@wordpress/babel-plugin-makepot": "^1.0.0",
    "autoprefixer": "^7.2.5",
    "awesome-typescript-loader": "^3.4.1",
    "babel-core": "^6.26.0",
    "babel-loader": "^7.1.4",
    "babel-plugin-transform-class-properties": "^6.24.1",
    "babel-plugin-transform-react-jsx": "^6.24.1",
    "babel-preset-es2015": "^6.24.1",
    "babel-preset-react": "^6.24.1",
    "browser-sync": "^2.23.6",
    "browser-sync-webpack-plugin": "^2.2.2",
    "css-loader": "^0.28.9",
    "extract-text-webpack-plugin": "^3.0.2",
    "husky": "^0.14.3",
    "identity-obj-proxy": "^3.0.0",
    "jest": "^22.1.2",
    "jest-serializer-html-string": "^1.0.1",
    "node-sass": "^4.7.2",
    "node-wp-i18n": "^1.1.1",
    "postcss-loader": "^2.0.10",
    "preact-render-to-string": "^3.7.0",
    "sass-loader": "^6.0.6",
    "tslib": "^1.8.1",
    "tslint": "^5.9.1",
    "tslint-react": "^3.4.0",
    "typescript": "^2.8.3",
    "typescript-eslint-parser": "^12.0.0",
    "webpack": "^3.11.0"
  },
  "dependencies": {
    "@wordpress/i18n": "^1.0.0",
    "classnames": "^2.2.5",
    "lodash.get": "^4.4.2",
    "lodash.mergewith": "^4.6.1",
    "lodash.set": "^4.3.2",
    "lodash.throttle": "^4.1.1",
    "preact": "^8.2.7",
    "preact-redux": "^2.0.3",
    "redux": "^3.7.2",
    "redux-thunk": "^2.2.0",
    "typesafe-actions": "^1.1.2"
  },
  "scripts": {
    "build:adapter": "webpack --config ./dev/webpack.config.js --env.libs=adapter --progress --colors",
    "build-watch:adapter": "npm run build:adapter -- -w",
    "build:controls": "webpack --config ./dev/webpack.config.js --env.libs=controls --progress --colors",
    "build-watch:controls": "npm run build:controls -- -w",
    "build:melody": "webpack --config ./dev/webpack.config.js --env.libs=melody --progress --colors",
    "build-watch:melody": "npm run build:melody -- -w",
    "build:all": "webpack --config ./dev/webpack.config.js --env.libs=melody,controls,adapter --progress --colors",
    "build-watch:all": "npm run build:all -- -w",
    "docker:up": "docker-compose up",
    "docker:down": "docker-compose down",
    "docker:pause": "docker-compose pause",
    "docker:start": "docker-compose start",
    "docker:stop": "docker-compose stop",
    "docker:bash": "docker exec -it $(docker ps -q -f name=melody_wordpress) /bin/bash",
    "lint": "tslint src/**/*.{ts,tsx}",
    "lint:fix": "npm run lint -- --fix",
    "prepush": "npm run lint & npm run test",
    "pot:php": "npx makepot plugin languages --force",
    "test": "export NODE_ENV=test && jest",
    "test:no-cache": "npm run test -- --no-cache",
    "test:watch": "npm run test -- --watchAll",
    "test:update-ss": "npm run test -- -u",
    "start": "export NODE_ENV=development && npm run build-watch:all"
  }
}
